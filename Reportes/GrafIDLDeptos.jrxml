<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="GrafIDLDeptos" language="groovy" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
	<property name="ireport.zoom" value="1.0"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="10"/>
	<parameter name="id" class="java.lang.Long"/>
	<queryString>
		<![CDATA[SELECT
     idldepartamento.id as id,
     LTRIM(RTRIM(d.nombre)) as nombre,
     porcentaje
FROM
     `idldepartamento` idldepartamento
Where idldepartamento.idl_id=$P{id}
INNER JOIN departamentos as d on d.id = departamento_id

Group By id]]>
	</queryString>
	<field name="id" class="java.lang.Long"/>
	<field name="nombre" class="java.lang.String"/>
	<field name="porcentaje" class="java.lang.Float"/>
	<group name="id">
		<groupExpression><![CDATA[$F{id}]]></groupExpression>
	</group>
	<summary>
		<band height="362">
			<pie3DChart>
				<chart>
					<reportElement x="0" y="0" width="545" height="330"/>
					<chartTitle/>
					<chartSubtitle/>
					<chartLegend/>
				</chart>
				<pieDataset>
					<keyExpression><![CDATA[$F{nombre}]]></keyExpression>
					<valueExpression><![CDATA[$F{porcentaje}]]></valueExpression>
				</pieDataset>
				<pie3DPlot>
					<plot/>
					<itemLabel color="#000000" backgroundColor="#FFFFFF"/>
				</pie3DPlot>
			</pie3DChart>
		</band>
	</summary>
</jasperReport>
